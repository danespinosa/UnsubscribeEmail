@page
@model UnsubscribeEmail.Pages.UnsubscribeLinks.IndexModel
@{
    ViewData["Title"] = "Unsubscribe Links";
}

<div class="container mt-5">
    <h1 class="mb-4">Email Unsubscribe Links</h1>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
    
    @if (Model.IsLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Fetching emails and extracting unsubscribe links... This may take a few minutes.</p>
        </div>
    }
    else if (Model.SenderInfos.Any())
    {
        <p class="lead">Found @Model.SenderInfos.Count sender(s) from emails in the current year.</p>
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Sender Email</th>
                        <th scope="col">Unsubscribe Link</th>
                        <th scope="col">Last Checked</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var sender in Model.SenderInfos)
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@sender.SenderEmail</td>
                            <td>
                                @if (!string.IsNullOrEmpty(sender.UnsubscribeLink))
                                {
                                    <a href="@sender.UnsubscribeLink" target="_blank" class="btn btn-sm btn-primary">
                                        Unsubscribe
                                    </a>
                                    <small class="text-muted d-block mt-1">@sender.UnsubscribeLink</small>
                                }
                                else
                                {
                                    <span class="text-muted">Not found</span>
                                }
                            </td>
                            <td>
                                <small>@sender.LastChecked.ToString("yyyy-MM-dd HH:mm:ss")</small>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <p class="text-muted">
                <strong>Summary:</strong> 
                @Model.SenderInfos.Count(s => s.UnsubscribeLink != null) out of @Model.SenderInfos.Count senders have unsubscribe links.
            </p>
        </div>
    }
    else if (!Model.IsLoading && string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-info" role="alert">
            No emails found from the current year. Please check your email configuration.
        </div>
    }
</div>
